<resources xmlns:tools="http://schemas.android.com/tools">
    <!--清单文件样式-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--在拖拽时的背景样式的透明的有样式-->
    <style name="SwipeBackActivity" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--应用主要样式-->
    <!--充满品屏幕的的分割线-->
    <style name="dev_all_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/app_main_dev_line</item>
    </style>

    <!---->
    <style name="all_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--标题文字的颜色-->
    <style name="text_title_style" parent="@style/all_wrap_content">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_main_title</item>
    </style>
    <!--副标题的颜色-->
    <style name="text_sub_title_style" parent="@style/all_wrap_content">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/app_main_sub_title_text</item>
    </style>

    <!--标题栏有样式-->
    <style name="app_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <!--首页底部tab样式-->
    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">@color/selector_mian_tab_collor</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>

        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- 去按钮立体效果 -->
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    
    <style name="order_btn_function_selector">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_choiceness_btn_collor</item>
        <item name="android:background">@drawable/selector_btn_choieness</item>
        <item name="android:gravity">center</item>

        <!-- 去按钮立体效果 -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- viewpage文本  滑动标签标题 -->
    <style name="viewpage_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/viewpage_selector_slide_title</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--填充满整个屏幕的宽度-->
    <style name="fill_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <!-- 加载滚动条样式 -->
    <style name="loading">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/progressloading</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    <!--我的设置-->
    <style name="me_icon_style_shang">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="me_icon_style_xia">
        <item name="android:layout_width">17dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="me_text_style_shang">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_main_collor</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="me_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/app_main_title_text</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="me_next_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--精选样式-->
    <!--筛选的显示的标题-->
    <style name="choiceness_condition_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/app_main_title_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--筛选的条件的下来箭头-->
    <style name="choiceness_condition_Image">
        <item name="android:layout_width">7dp</item>
        <item name="android:layout_height">7dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <!--筛选的条件每一个框-->
    <style name="choiceness_condition_every_page">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--筛选的每一个框内容显示的字体样式-->
    <style name="choiceness_condition_every_page_context">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/app_main_title_text</item>
    </style>

    <!--首页样式-->
    <!--首页导航导航栏的内容的样式-->
    <style name="home_main_function_fragment">
        <item name="android:layout_width">73dp</item>
        <item name="android:layout_height">73dp</item>
    </style>
    <!--定位字体样式-->
    <style name="home_localtion_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--首页功能导航样式-->
    <style name="home_function_every">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">31dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--精选样式-->
    <!--选项条的样式字体-->
    <style name="choiceness_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/app_main_title_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--选项条下面的小黄线的样式-->
    <style name="choiceness_title_down_line">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/app_main_collor</item>
    </style>

    <!--精选二级筛选的样式-->
    <style name="choiceness_hot_good_second_sift">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_hot_good_sift_child_text</item>
    </style>

    <!--精选简单列表-->
    <style name="popupwindow_single_listView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_hot_good_sift_child_text</item>
    </style>

    <!--订单详情界面-->
    <style name="order_condition_condition_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/app_main_title</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--弹出加载dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
        <item name="android:background">#00000000</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--字体样式-->
    <style name="text_title_12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_main_title_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_main_title_16">
        <item name="android:layout_width">wrap_content</item>
