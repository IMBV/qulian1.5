        <item name="android:textColor">@color/app_main_title_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_yellow_title_14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_main_collor</item>
