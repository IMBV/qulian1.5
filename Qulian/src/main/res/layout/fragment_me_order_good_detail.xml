<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="49dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp">

                <TextView
                    style="@style/text_main_title_14"
                    android:text="订单号:" />

                <TextView
                    android:id="@+id/tv_order_number_info"
                    style="@style/text_main_title_14"
                    android:layout_marginLeft="5dp"
                    android:text="12545454354" />

                <ImageView
                    style="@style/me_next_img"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_next" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_order_user_stype"
                style="@style/text_yellow_title_14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="确认中" />
        </RelativeLayout>

        <View
            style="@style/dev_all_line"
            android:layout_marginLeft="10dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_good_detail_img"
                            android:layout_width="135dp"
                            android:layout_height="91dp"
                            android:src="@mipmap/bg_default_min" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_good_detail_name"
                                style="@style/text_main_title_14"
                                android:layout_width="match_parent"
                                android:layout_gravity="left"
                                android:lines="2"
                                android:text="趣连旅行。消灭一起没有准备的旅行" />


                            <TextView
                                style="@style/text_title_sub_12"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:singleLine="true"
                                android:text="数量：" />

                            <TextView
                                style="@style/text_title_sub_12"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:singleLine="true"
                                android:text="单价：" />


                        </LinearLayout>


                    </LinearLayout>

                    <Button
                        android:layout_width="76dp"
                        android:layout_height="24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/selector_btn_choieness"
                        android:text="查看消费券"
                        android:textColor="@color/selector_choiceness_btn_collor"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    style="@style/text_main_title_14"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:text="订单详情" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_main_title_tytle_14"
                        android:text="起始日期：" />

                    <TextView
                        style="@style/text_main_title_14"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_main_title_tytle_14"
                        android:text="截至日期：" />

                    <TextView
                        style="@style/text_main_title_14"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_main_title_tytle_14"
                        android:text="数量：" />

                    <TextView
                        style="@style/text_main_title_14"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_main_title_tytle_14"
                        android:text="套餐：" />

                    <TextView
                        style="@style/text_main_title_14"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/text_main_title_tytle_14"
                        android:text="订单总价：" />

                    <TextView
                        style="@style/text_main_title_14"
                        android:text="" />

                </LinearLayout>

                <View style="@style/dev_all_line" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_bg_gray_yellow"
        android:gravity="center"
        android:text="联系达人"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />
</RelativeLayout>