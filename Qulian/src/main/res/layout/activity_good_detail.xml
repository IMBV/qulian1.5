<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ScrollView
        android:id="@+id/sv_author_play_method_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_detail_adv"
        android:layout_marginBottom="49.5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--商品界面的展示图片-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_detail_adv"
                    android:layout_width="match_parent"
                    android:layout_height="185dp">

                    <LinearLayout
                        android:id="@+id/top_news_viewpager"
                        android:layout_width="fill_parent"
                        android:layout_height="185dp"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:gravity="right|bottom"
                        android:orientation="horizontal">
                        <!-- 放置图片中选中点的位置 -->
                        <LinearLayout
                            android:id="@+id/dots_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:orientation="horizontal" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/iv_detail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="21dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/icon_back_w" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_good_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:maxLines="2"
                    android:text="趣连旅行"
                    android:textColor="@color/app_main_title"
                    android:textSize="14sp" />

                <LinearLayout
                    style="@style/all_wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_hot_good_currentprice"
                        style="@style/all_wrap_content"
                        android:text="￥60"
                        android:textColor="@color/app_main_price_text"
                        android:textSize="20sp" />

                    <TextView
                        style="@style/text_sub_title_style"
                        android:layout_gravity="bottom"
                        android:text="起"
                        android:textSize="12sp" />

                    <FrameLayout
                        style="@style/all_wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp">

                        <View
                            android:layout_width="45dp"
                            android:layout_height="1px"
                            android:layout_gravity="center"
                            android:background="@color/app_main_sub_title_text" />

                        <TextView
                            android:id="@+id/tv_hot_good_old_price"
                            style="@style/text_sub_title_style"
                            android:layout_gravity="center"
                            android:text="￥60"
                            android:textSize="12sp" />
                    </FrameLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/shape_bg_dicount"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="3.66折"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_good_save_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:text="已售12"
                        android:textColor="@color/app_main_sub_title_text"
                        android:textSize="12sp" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_x_tuijian" />

                        <TextView
                            style="@style/text_main_title_16"
                            android:layout_marginLeft="10dp"
                            android:text="特色推荐" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginTop="15dp"
                        android:background="#FEF7E5"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="趣连消灭一切没有准备的旅行"
                            android:textColor="@color/app_main_collor"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_x_jianyan" />

                        <TextView
                            style="@style/text_main_title_16"
                            android:layout_marginLeft="10dp"
                            android:text="详细信息" />
                    </LinearLayout>

                    <ImageView
                        style="@style/me_next_img"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/icon_next" />
                </RelativeLayout>

                <View style="@style/dev_all_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_x_taocan" />

                        <TextView
                            style="@style/text_main_title_16"
                            android:layout_marginLeft="10dp"
                            android:text="可选套餐" />
                    </LinearLayout>

                    <TextView
                        style="@style/text_title_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:text="3种" />
                </RelativeLayout>

                <View style="@style/dev_all_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_x_time" />

                        <TextView
                            style="@style/text_main_title_16"
                            android:layout_marginLeft="10dp"
                            android:text="可选时间" />
                    </LinearLayout>

                    <TextView
                        style="@style/text_title_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:text="11:30-14.45" />
                </RelativeLayout>

                <View style="@style/dev_all_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/icon_x_location" />

                        <TextView
                            style="@style/text_main_title_16"
                            android:layout_marginLeft="10dp"
                            android:text="可选门店" />
                    </LinearLayout>

                    <ImageView
                        style="@style/me_next_img"
                        android:layout_marginRight="5dp"
                        android:src="@mipmap/icon_next" />
                </RelativeLayout>

                <View style="@style/dev_all_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:background="@drawable/selector_bg_while_gray"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_x_xuzhi" />

                    <TextView
                        style="@style/text_main_title_16"
                        android:layout_marginLeft="10dp"
                        android:text="购买须知" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <include layout="@layout/layout_all_detail_foot_buy" />
</RelativeLayout>
