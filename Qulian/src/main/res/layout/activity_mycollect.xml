<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/app_title"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/iv_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/nav_back" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_register_style_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_register_style_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="推荐线路"
                    android:textColor="@color/app_main_title_text"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v_register_phone_indicate_line"
                    android:layout_width="35dp"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/app_main_collor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_register_style_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp">

                <TextView
                    android:id="@+id/tv_register_style_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="热门商品"
                    android:textColor="@color/app_main_title_text"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/v_register_email_indicate_line"
                    android:layout_width="35dp"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/app_main_collor"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_mycolloct_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="编辑"
            android:textColor="@color/app_main_title"
            android:textSize="14sp" />

    </RelativeLayout>

    <View style="@style/dev_all_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

