<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/iv_good_list_icon"
        android:layout_width="135dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_fujin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_good_list_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv_home_quality_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="趣连、消灭一切没有准备的旅行。"
            android:textColor="@color/app_main_title"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_home_quality_name"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/icon_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="蟹道乐 * 800m"
                android:textColor="@color/app_main_sub_title_text"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_tuan_deal_currentprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥60"
                android:textColor="@color/app_main_price_text"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp">

                <View
                    android:layout_width="45dp"
                    android:layout_height="1px"
                    android:layout_gravity="center"
                    android:background="@color/app_main_sub_title_text" />

                <TextView
                    android:id="@+id/tv_tuan_deal_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="￥60"
                    android:textColor="@color/app_main_sub_title_text"
                    android:textSize="12sp" />
            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>