<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_systembar" />

    <LinearLayout
        style="@style/app_title"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="东京"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/nav_up_h" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_main_dev_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:gravity="center_vertical"
                android:text="日历天气和聊天"
                android:textSize="20sp"
                android:src="@mipmap/bg_default_min"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="不知道怎么写"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:background="@drawable/shape_btn_yellow"
                android:text="进入群"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_find_content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>