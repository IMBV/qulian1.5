<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <View style="@style/dev_all_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:textColor="@color/app_main_title_text"
            android:textSize="16sp" />

        <com.quliantrip.qulian.view.ClearEditText
            android:id="@+id/cet_old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:textColorHint="@color/app_main_tag_dec_line"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/dev_all_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/app_main_title_text"
            android:textSize="16sp" />

        <com.quliantrip.qulian.view.ClearEditText
            android:id="@+id/cet_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/app_main_tag_dec_line"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/dev_all_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/app_main_title_text"
            android:textSize="16sp" />

        <com.quliantrip.qulian.view.ClearEditText
            android:id="@+id/cet_confirmation_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:textColorHint="@color/app_main_tag_dec_line"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/dev_all_line" />

    <Button
        android:id="@+id/bt_change_password"
        style="@style/btn_yellow_grat"
        android:layout_margin="10dp"
        android:text="保存" />
</LinearLayout>
