<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_white_angle">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_bg_white_angle"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择证件类型"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ll_me_check_paper_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_bg_while_gray"
            android:gravity="center_vertical">

            <TextView
                style="@style/pay_method_sytle_check"
                android:layout_gravity="center_vertical"
                android:text="护照" />

            <ImageView
                android:id="@+id/iv_me_check_paper_hz"
                android:layout_width="19dp"
                android:layout_height="19dp"

                android:layout_marginLeft="100dp"
                android:src="@mipmap/cnb_wode_pre" />
        </LinearLayout>

        <View
            style="@style/dev_all_line"
            android:layout_width="133dp" />

        <LinearLayout
            android:id="@+id/ll_me_check_paper_sf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/selector_bg_while_gray">

            <TextView
                style="@style/pay_method_sytle_check"
                android:layout_gravity="center_vertical"
                android:text="身份证" />

            <ImageView
                android:id="@+id/iv_me_check_paper_sf"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="right"
                android:layout_marginLeft="84dp"
                android:src="@mipmap/cnb_wode_pre" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout><!--cnb_wode_nor-->
