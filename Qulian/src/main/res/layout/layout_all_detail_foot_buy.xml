<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <View style="@style/dev_all_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <LinearLayout
            android:id="@+id/ll_good_collect"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:background="@drawable/selector_bg_while_gray"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_good_collect_img"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/icon_x_shoucang" />

            <TextView
                android:id="@+id/iv_good_collect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dp"
                android:text="收藏"
                android:textColor="@color/app_main_title_text"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_detail_order_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_btn_right_yellow"
            android:text="立即购买"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
