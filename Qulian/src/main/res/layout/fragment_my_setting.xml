<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tv_my_setting_updatePaw"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_me_edit_mima"
            style="@style/me_icon_style_xia"
            android:src="@mipmap/icon_wode_edit" />

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_me_edit_mima"
            android:text="修改密码" />
    </RelativeLayout>

    <Button
        android:id="@+id/tv_my_setting_loginout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_btn_yellow"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="19sp"
        android:text="退出当前用户"/>

</RelativeLayout>
