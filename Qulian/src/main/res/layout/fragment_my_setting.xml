<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg"
    android:orientation="vertical">

    <View style="@style/dev_all_line" />

    <RelativeLayout
        android:id="@+id/tv_my_setting_updatePasword"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_bg_while_gray">

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:text="修改密码" />

        <ImageView
            style="@style/me_next_img"
            android:src="@mipmap/icon_next" />
    </RelativeLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_bg_while_gray">

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:text="版本更新" />

        <TextView
            android:id="@+id/tv_app_versionCode"
            style="@style/me_text_style"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="新版本1.5.1"
            android:textColor="@color/app_main_collor" />
    </RelativeLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="10dp" />

    <RelativeLayout
        android:id="@+id/tv_my_setting_about_me"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_bg_while_gray">

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:text="关于我们" />

        <ImageView
            style="@style/me_next_img"
            android:src="@mipmap/icon_next" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_my_setting_loginout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_bg_while_gray">

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:text="退出当前账号" />
    </RelativeLayout>
</LinearLayout>
