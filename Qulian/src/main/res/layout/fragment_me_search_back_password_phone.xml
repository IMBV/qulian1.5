<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/app_main_title_text"
            android:textSize="16sp" />

        <com.quliantrip.qulian.view.ClearEditText
            android:id="@+id/bt_searck_back_password_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@color/colorPrimary"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColorHint="@color/app_main_tag_dec_line"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="@color/app_main_title_text"
                android:textSize="16sp" />

            <com.quliantrip.qulian.view.ClearEditText
                android:id="@+id/bt_searck_back_password_phone_check_code"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/colorPrimary"
                android:hint="输入验证码"
                android:textColorHint="@color/app_main_tag_dec_line"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_get_phone_check"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_yellow"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="若未绑定手机号，请选择"
            android:textColor="@color/app_main_title_text"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱找回"
            android:textColor="@color/app_main_collor"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="，微信登录请直接登录"
            android:textColor="@color/app_main_title_text"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_submit_search_back_password_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_bg_yellow_gray"
        android:text="提交" />
</LinearLayout>
