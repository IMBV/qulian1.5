<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_main_tag_dec_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_paly_method_specialty_theme"
            style="@style/choiceness_condition_every_page">

            <TextView
                android:id="@+id/tv_paly_method_theme_text"
                style="@style/choiceness_condition_title"
                android:text="特设主题" />

            <ImageView
                android:id="@+id/iv_paly_method_theme_img"
                style="@style/choiceness_condition_Image"
                android:background="@mipmap/nav_shaixuan_normal" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/app_main_dev_line" />

        <LinearLayout
            android:id="@+id/ll_paly_method_pre_time"
            style="@style/choiceness_condition_every_page">

            <TextView
                android:id="@+id/tv_paly_method_pretime_text"
                style="@style/choiceness_condition_title"
                android:text="预约时间" />

            <ImageView
                android:id="@+id/iv_paly_method_pre_time_img"
                style="@style/choiceness_condition_Image"
                android:background="@mipmap/nav_shaixuan_normal" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@color/app_main_dev_line" />

        <LinearLayout
            android:id="@+id/ll_paly_method_person_number"
            style="@style/choiceness_condition_every_page">

            <TextView
                android:id="@+id/tv_paly_method_person_number_text"
                style="@style/choiceness_condition_title"
                android:text="适用人数" />

            <ImageView
                android:id="@+id/iv_paly_method_person_number_img"
                style="@style/choiceness_condition_Image"
                android:background="@mipmap/nav_shaixuan_normal" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_consume_list_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_main_tag_dec_line" />

    <include layout="@layout/adapter_play_list_item" />

</LinearLayout>
