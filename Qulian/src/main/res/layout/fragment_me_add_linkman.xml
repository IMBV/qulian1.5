<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View style="@style/dev_all_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="49dp"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_main_app_title_16"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="姓名" />

                    <com.quliantrip.qulian.view.ClearEditText
                        android:id="@+id/cet_link_man_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/colorPrimary"
                        android:hint="填写姓名"
                        android:textColor="@color/app_main_title"
                        android:textColorHint="@color/app_main_sub_title_text"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_main_app_title_16"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="姓（拼音）" />

                    <com.quliantrip.qulian.view.ClearEditText
                        android:id="@+id/cet_linkman_pingyin_xing"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/colorPrimary"
                        android:hint="姓（拼音）"
                        android:textColor="@color/app_main_title"
                        android:textColorHint="@color/app_main_sub_title_text"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_main_app_title_16"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="名（拼音）" />

                    <com.quliantrip.qulian.view.ClearEditText
                        android:id="@+id/cet_linkman_pingyin_ming"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/colorPrimary"
                        android:hint="名（拼音）"
                        android:textColor="@color/app_main_title"
                        android:textColorHint="@color/app_main_sub_title_text"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <RelativeLayout
                    android:id="@+id/rl_born_data"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/text_main_app_title_16"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="出生日期" />

                        <TextView
                            android:id="@+id/cet_linkman_birth"
                            style="@style/text_main_title_16"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text="1991-1-1"
                            android:textColor="@color/app_main_title" />
                    </LinearLayout>

                    <ImageView
                        style="@style/me_next_img"
                        android:src="@mipmap/icon_next" />

                </RelativeLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <RelativeLayout
                    android:id="@+id/ll_me_check_sex"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/text_main_app_title_16"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="性别" />

                        <TextView
                            android:id="@+id/tv_link_man_sex"
                            style="@style/text_main_title_16"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text="男"
                            android:textColor="@color/app_main_title" />
                    </LinearLayout>

                    <ImageView
                        style="@style/me_next_img"
                        android:src="@mipmap/icon_next" />

                </RelativeLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <RelativeLayout
                    android:id="@+id/rl_certificate_type"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/text_main_app_title_16"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="证件类别" />

                        <TextView
                            android:id="@+id/tv_link_man_certificate_type"
                            style="@style/text_main_title_16"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text="护照"
                            android:textColor="@color/app_main_title" />
                    </LinearLayout>

                    <ImageView
                        style="@style/me_next_img"
                        android:src="@mipmap/icon_next" />

                </RelativeLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/text_main_app_title_16"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="证件号码" />

                        <com.quliantrip.qulian.view.ClearEditText
                            android:id="@+id/cet_link_man_certificate_number"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/colorPrimary"
                            android:hint="填写证件号码"
                            android:textColor="@color/app_main_title"
                            android:textColorHint="@color/app_main_sub_title_text"
                            android:textSize="16sp" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_main_app_title_16"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="收货地址" />

                    <com.quliantrip.qulian.view.ClearEditText
                        android:id="@+id/cet_linkman_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/colorPrimary"
                        android:hint="请填写收货地址"
                        android:textColor="@color/app_main_title"
                        android:textColorHint="@color/app_main_sub_title_text"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    style="@style/dev_all_line"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_main_app_title_16"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="手机号码" />

                    <com.quliantrip.qulian.view.ClearEditText
                        android:id="@+id/cet_linkman_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@color/colorPrimary"
                        android:hint="请填写手机号码"
                        android:textColor="@color/app_main_title"
                        android:textColorHint="@color/app_main_sub_title_text"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/bt_save_link_man"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_bg_gray_yellow"
            android:text="保存"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>
