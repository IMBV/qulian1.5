<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RatioImageView="http://schemas.android.com/apk/res/com.quliantrip.qulian"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResAuto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:padding="6dp">

        <com.quliantrip.qulian.view.RatioImageView
            android:id="@+id/iv_home_recommend_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            RatioImageView:ratioscale="2.0286" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#4c000000"
                android:shadowDx="0"
                android:shadowDy="15"
                android:shadowRadius="1"
                android:text="上野公园-熊猫咖啡-演歌表演-江户川定食"
                android:textSize="14sp"
                android:textColor="#ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:background="#ffffff" />

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:shadowColor="#4c000000"
                    android:textSize="12sp"
                    android:shadowDx="0"
                    android:shadowDy="15"
                    android:shadowRadius="1"
                    android:text="有1000人这样玩"
                    android:textColor="#ffffff" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:background="#ffffff" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
