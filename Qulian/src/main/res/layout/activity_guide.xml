<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/bt_enter"
        android:layout_width="96dp"
        android:layout_height="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/selector_btn_choieness"
        android:text="开始体验"
        android:textColor="#f3c440"
        android:textSize="14sp"
        android:visibility="invisible" />

    <!--选择器色系-->
    <!--android:textColor="@color/selector_choiceness_btn_collor"-->

    <RelativeLayout
        android:id="@+id/rl_guide_oval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp">

        <LinearLayout
            android:id="@+id/ll_point_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <View
            android:id="@+id/v_point_red"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/shape_point_red" />
    </RelativeLayout>

</RelativeLayout>

