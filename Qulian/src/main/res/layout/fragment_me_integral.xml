<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg"
    android:orientation="vertical">

    <View style="@style/dev_all_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <TextView
            style="@style/all_wrap_content"
            android:text="当前积分："
            android:textColor="@color/app_main_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_me_integral"
            style="@style/all_wrap_content"
            android:text="110"
            android:textColor="@color/app_main_collor"
            android:textSize="20sp" />

        <TextView
            style="@style/all_wrap_content"
            android:layout_marginLeft="5dp"
            android:text="分"
            android:textColor="@color/app_main_sub_title_text"
            android:textSize="12sp" />

    </LinearLayout>




</LinearLayout>
