    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/text_main_title_tytle_14"
            android:text="数量：" />

        <TextView
            style="@style/text_main_title_14"
