<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp">

            <TextView
                style="@style/text_main_title_14"
                android:text="订单号:" />

            <TextView
                android:id="@+id/tv_order_number_info"
                style="@style/text_main_title_14"
                android:layout_marginLeft="5dp"
                android:text="12545454354" />

            <ImageView
                style="@style/me_next_img"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_next" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_user_stype"
            style="@style/text_yellow_title_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="确认中" />
    </RelativeLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/iv_good_detail_img"
            android:layout_width="95dp"
            android:layout_height="63dp"
            android:src="@mipmap/bg_default_min" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_good_detail_name"
                    style="@style/text_main_title_14"
                    android:layout_width="180dp"
                    android:layout_gravity="left"
                    android:lines="2"
                    android:text="趣连旅行。消灭一起没有准备的旅行" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_good_order_every_price"
                        style="@style/text_main_title_12"
                        android:text="￥160.00" />

                    <TextView
                        android:id="@+id/tv_good_order_num"
                        style="@style/text_title_sub_12"
                        android:text="×2" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_good_order_taocan"
                style="@style/text_title_sub_12"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="套餐类型" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp">

                <TextView
                    style="@style/text_main_title_12"
                    android:text="共1件商品" />

                <TextView
                    style="@style/text_main_title_12"
                    android:layout_marginLeft="5dp"
                    android:text="合计：" />

                <TextView
                    style="@style/text_main_title_14"
                    android:text="￥" />

                <TextView
                    android:id="@+id/tv_good_order_total_price"
                    style="@style/text_main_title_16"
                    android:text="320.00" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/bt_good_order_link_daren"
                android:layout_width="76dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_btn_choieness"
                android:text="联系达人"
                android:textColor="@color/selector_choiceness_btn_collor"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_good_order_cancel"
                android:layout_width="76dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_btn_choieness"
                android:text="取消订单"
                android:textColor="@color/selector_choiceness_btn_collor"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_good_order_see_consume"
                android:layout_width="76dp"
                android:layout_height="24dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@drawable/selector_btn_choieness"
                android:text="查看消费券"
                android:textColor="@color/selector_choiceness_btn_collor"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/dev_all_line" />
</LinearLayout>
