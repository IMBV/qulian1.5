<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_main_tag_dec_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/app_main_bg">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/rg_hot_good_classfy"
                        android:layout_width="fill_parent"
                        android:layout_height="44dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:background="@color/app_main_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            style="@style/choiceness_btn_selector"
                            android:layout_marginLeft="10dp"
                            android:text="全部" />

                    </RadioGroup>
                </RelativeLayout>
            </HorizontalScrollView>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_route_sift"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_recommend_route_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="筛选"
                android:textColor="@color/app_main_title_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_recommend_route_img"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/nav_shaixuan_normal" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_consume_list_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_main_tag_dec_line" />

    <include layout="@layout/layout_hot_good_best_to_me" />
    <View android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorPrimary"/>
    <include
        layout="@layout/adapter_good_list_item" />


    <!--<ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"></ListView>-->

</LinearLayout>
