<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_main_tag_dec_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/app_main_bg"
        android:orientation="horizontal">


        <HorizontalScrollView
            android:id="@+id/asklfaklhflkafh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/sakjdfhlkashflkashf"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ll_route_sift"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_recommend_route_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="筛选"
                android:textColor="@color/app_main_title_text"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_recommend_route_img"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/nav_shaixuan_normal" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_consume_list_bottom_line"
        style="@style/dev_all_line" />

    <include layout="@layout/view_pulltorefresh_listview"/>


    <!--<include layout="@layout/layout_hot_good_best_to_me" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorPrimary" />

    <include layout="@layout/adapter_good_list_item" />-->


    <!--<ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"></ListView>-->

</LinearLayout>
