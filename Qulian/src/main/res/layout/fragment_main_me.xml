<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <!--这里添加要显示的布局-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="@mipmap/bg_wode">

        <RelativeLayout
            android:id="@+id/iv_me_seeting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@mipmap/icon_wode_setting" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_user_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:orientation="vertical">

            <com.quliantrip.qulian.view.CircleImageView
                android:id="@id/tv_me_userImage"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@mipmap/icon_photo"
                app:border_color="#b2FFFFFF"
                app:border_width="2dp" />

            <TextView
                android:id="@+id/tv_me_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="点击登录"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_me_collect"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_while_gray"
            android:gravity="center">

            <ImageView
                style="@style/me_icon_style_shang"
                android:src="@mipmap/icon_wode_shoucang" />

            <TextView
                style="@style/me_text_style_shang"
                android:layout_gravity="center"
                android:text="我的收藏" />
        </LinearLayout>

        <View
            android:layout_width="1.5px"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="#DCDCDC" />

        <LinearLayout
            android:id="@+id/ll_me_integral"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_while_gray"
            android:gravity="center">

            <ImageView
                style="@style/me_icon_style_shang"
                android:src="@mipmap/icon_wode_jifen" />

            <TextView
                style="@style/me_text_style_shang"
                android:layout_gravity="center"
                android:text="我的积分" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f8f4f1" />

    <RelativeLayout
        android:id="@+id/ll_me_orderList"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_bg_while_gray">

        <ImageView
            android:id="@+id/iv_me_shoucang"
            style="@style/me_icon_style_xia"
            android:src="@mipmap/icon_wode_dingdan" />

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_me_shoucang"
            android:text="我的订单" />

        <ImageView
            style="@style/me_next_img"
            android:src="@mipmap/icon_next" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:background="@color/app_main_dev_line" />

    <RelativeLayout
        android:id="@+id/ll_me_offen_lianxiren"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_bg_while_gray">

        <ImageView
            android:id="@+id/iv_me_lianxiren"
            style="@style/me_icon_style_xia"
            android:src="@mipmap/icon_wode_lianxiren" />

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_me_lianxiren"
            android:text="常用联系人" />

        <ImageView
            style="@style/me_next_img"
            android:src="@mipmap/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f8f4f1" />

    <RelativeLayout
        android:id="@+id/ll_me_youhuijuan"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_bg_while_gray">

        <ImageView
            android:id="@+id/iv_me_youhuijuan"
            style="@style/me_icon_style_xia"
            android:src="@mipmap/icon_wode_youhuiquan" />

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_me_youhuijuan"
            android:text="我的抵用券" />

        <ImageView
            style="@style/me_next_img"
            android:src="@mipmap/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f8f4f1" />

    <RelativeLayout
        android:id="@+id/ll_me_fankui"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/selector_bg_while_gray">

        <ImageView
            android:id="@+id/iv_me_fankui"
            style="@style/me_icon_style_xia"
            android:src="@mipmap/icon_wode_fankui" />

        <TextView
            style="@style/me_text_style"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_me_fankui"
            android:text="意见反馈" />

        <ImageView
            style="@style/me_next_img"
            android:src="@mipmap/icon_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_bg" />
</LinearLayout>