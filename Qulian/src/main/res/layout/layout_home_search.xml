<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/app_title"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_home_result_searck_back"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/nav_back" />

        <com.quliantrip.qulian.view.ClearEditText
            android:id="@+id/cet_home_search"
            android:layout_width="270dp"
            android:layout_height="28dip"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@mipmap/search"
            android:hint="请输入商品名、地名"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColorHint="#AAAAAA"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_home_search_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:text="取消"
            android:textColor="@color/app_main_sub_title_text" />
    </RelativeLayout>

    <View style="@style/dev_all_line" />
</LinearLayout>