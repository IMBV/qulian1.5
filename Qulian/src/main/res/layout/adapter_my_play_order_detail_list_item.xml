<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp">

            <TextView
                style="@style/text_main_title_14"
                android:text="12545454354" />

            <ImageView
                style="@style/me_next_img"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_next" />


        </LinearLayout>

        <TextView
            style="@style/text_yellow_title_14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="确认中" />
    </RelativeLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/text_main_title_tytle_14"
            android:text="产品标签：" />

        <TextView
            style="@style/text_main_title_14"
            android:layout_marginLeft="10dp"
            android:text="京都" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/text_main_title_tytle_14"
            android:text="套餐类型：" />

        <TextView
            style="@style/text_main_title_14"
            android:layout_marginLeft="10dp"
            android:text="京都" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/text_main_title_tytle_14"
            android:text="预约时间：" />

        <TextView
            style="@style/text_main_title_14"
            android:layout_marginLeft="10dp"
            android:text="京都" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp">

        <TextView
            style="@style/text_main_title_tytle_14"
            android:text="数量：" />

        <TextView
            style="@style/text_main_title_14"
            android:layout_marginLeft="10dp"
            android:text="2" />
    </LinearLayout>

    <View
        style="@style/dev_all_line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <Button
            android:layout_width="76dp"
            android:layout_height="24dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_choieness"
            android:textColor="@color/selector_choiceness_btn_collor"
            android:textSize="12sp"
            android:text="查看消费券"/>
    </RelativeLayout>

</LinearLayout>
