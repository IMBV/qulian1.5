<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:background="@drawable/selector_bg_while_gray">

    <RelativeLayout
        android:id="@+id/ll_play_method_good_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/ll_paly_method_good"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_play_method_package_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_location_now" />

        <View
            android:id="@+id/v_item_line"
            android:layout_width="4px"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7.5dp"
            android:layout_marginTop="35dp"
            android:background="@color/app_main_dev_line" />

        <ImageView
            android:id="@+id/iv_list_end"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2.5dp"
            android:src="@mipmap/icon_x_add" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_paly_method_good"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ll_play_method_good_bar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_play_method_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="京都峨眉之馆和和服体验及租赁一天"
            android:textColor="@color/app_main_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_play_method_detail_taocan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="(趣连消灭一起没有准备的旅行。)"
            android:textColor="@color/app_main_title_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_play_method_detail_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:text="(趣连,加厚款到付哈萨克发了哈快速返回到看见爱上对方可拉风哈迪斯卡复活)"
            android:textColor="@color/app_main_title_text"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_play_method_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ 100"
                android:textColor="@color/app_main_price_text"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="63dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+id/tv_play_method_good_item_end_line"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"
                android:src="@mipmap/btn_x_hanyihan" />

            <View
                android:id="@+id/tv_play_method_good_item_end_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/tv_play_method_detail_price"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="20dp"
                android:background="@color/app_main_dev_line" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7.5dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

</RelativeLayout>
