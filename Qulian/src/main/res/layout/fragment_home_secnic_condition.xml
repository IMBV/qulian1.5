<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <View
            style="@style/dev_all_line"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="热门城市"
            android:textColor="@color/app_main_sub_title_text"
            android:textSize="12sp" />

        <View
            style="@style/dev_all_line"
            android:layout_marginLeft="10dp" />

        <com.quliantrip.qulian.view.MyGridView
            android:id="@+id/mgv_secnic_play_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:horizontalSpacing="12.5dp"
            android:numColumns="3"
            android:verticalSpacing="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="历史搜索"
            android:textColor="@color/app_main_sub_title_text"
            android:textSize="12sp" />

        <View
            style="@style/dev_all_line"
            android:layout_marginLeft="15dp" />

        <com.quliantrip.qulian.view.MyListView
            android:id="@+id/mlv_secnic_play_hosity_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tv_search_condition"
            style="@style/text_main_title_tytle_14"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="清除历史记录"/>
    </LinearLayout>
</ScrollView>
