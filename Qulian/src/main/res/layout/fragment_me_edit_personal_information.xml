<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_bg"
    android:orientation="vertical">

    <View style="@style/dev_all_line" />

    <RelativeLayout
        android:id="@+id/ll_me_edit_person_information_head_img"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary">

        <TextView
            style="@style/my_edit_person_information"

            android:text="头像" />

        <com.quliantrip.qulian.view.CircleImageView
            android:id="@+id/tv_edit_me_userImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/icon_photo"
            app:border_color="#b2FFFFFF"
            app:border_width="2dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_edit_me_nickname"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary">

        <TextView
            style="@style/my_edit_person_information"
            android:text="昵称" />
    </RelativeLayout>

    <View style="@style/dev_all_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary">

        <TextView
            style="@style/my_edit_person_information"
            android:text="微信绑定" />

    </RelativeLayout>

    <View style="@style/dev_all_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary">

        <TextView
            style="@style/my_edit_person_information"
            android:text="手机绑定" />
    </RelativeLayout>

    <View style="@style/dev_all_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary">

        <TextView
            style="@style/my_edit_person_information"
            android:text="邮箱账号" />
    </RelativeLayout>

</LinearLayout>
