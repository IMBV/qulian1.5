<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <View
        style="@style/dev_all_line"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1px"
        android:layout_marginBottom="49dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_good_name"
                style="@style/text_main_title_16"
                android:layout_margin="15dp"
                android:singleLine="true"
                android:text="趣连消灭一切没有准备的旅行" />

            <com.quliantrip.qulian.view.MyListView
                android:id="@+id/mlv_good_taocan_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:divider="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <ImageView
                        android:id="@+id/iv_order_check_number"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_people" />

                    <TextView
                        style="@style/order_condition_condition_text"
                        android:layout_toRightOf="@id/iv_order_check_number"
                        android:text="选择人数" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <RelativeLayout
                            android:id="@+id/iv_good_person_number_down"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/selector_bg_yellow_gray">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/selector_mipmap_order_minus" />
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <View
                                android:layout_width="36dp"
                                android:layout_height="1dp"
                                android:background="@color/app_main_dev_line" />

                            <TextView
                                android:id="@+id/tv_good_check_person_number"
                                android:layout_width="36dp"
                                android:layout_height="22dp"
                                android:gravity="center"
                                android:text="1" />

                            <View
                                android:layout_width="36dp"
                                android:layout_height="1dp"
                                android:background="@color/app_main_dev_line" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/iv_good_person_number_add"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/selector_bg_yellow_gray">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/selector_mipmap_order_add" />
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

                <View style="@style/dev_all_line" />

                <RelativeLayout
                    android:id="@+id/rl_check_store_setting"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <ImageView
                        android:id="@+id/iv_order_check_store"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_mendian" />

                    <TextView
                        android:id="@+id/tv_order_store_text"
                        style="@style/order_condition_condition_text"
                        android:layout_toRightOf="@id/iv_order_check_store"
                        android:text="选择门店" />

                    <TextView
                        android:id="@+id/tv_check_store_result_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/tv_order_store_text"
                        android:text="二条本店"
                        android:textColor="@color/app_main_collor"
                        android:textSize="14sp" />

                    <ImageView
                        style="@style/me_next_img"
                        android:src="@mipmap/icon_next" />

                </RelativeLayout>

                <View style="@style/dev_all_line" />

                <RelativeLayout
                    android:id="@+id/rl_preview_time_data_setting"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <ImageView
                        android:id="@+id/iv_order_check_data"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_x_riqi" />

                    <TextView
                        android:id="@+id/tv_order_data_text"
                        style="@style/order_condition_condition_text"
                        android:layout_toRightOf="@id/iv_order_check_data"
                        android:text="预约日期" />

                    <TextView
                        android:id="@+id/tv_preview_time_data_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/tv_order_data_text"
                        android:text="2015-12-25"
                        android:textColor="@color/app_main_collor"
                        android:textSize="14sp" />

                    <ImageView
                        style="@style/me_next_img"
                        android:src="@mipmap/icon_next" />

                </RelativeLayout>

                <View style="@style/dev_all_line" />

                <RelativeLayout
                    android:id="@+id/rl_serve_time_setting"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/selector_bg_while_gray">

                    <ImageView
                        android:id="@+id/iv_order_check_time"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_x_time" />

                    <TextView
                        android:id="@+id/tv_order_time_text"
                        style="@style/order_condition_condition_text"
                        android:layout_toRightOf="@id/iv_order_check_time"
                        android:text="服务时间" />

                    <TextView
                        android:id="@+id/tv_serve_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="40dp"
                        android:layout_toRightOf="@+id/tv_order_time_text"
                        android:text="11:20"
                        android:textColor="@color/app_main_collor"
                        android:textSize="14sp" />

                    <ImageView
                        style="@style/me_next_img"
                        android:src="@mipmap/icon_next" />

                </RelativeLayout>

                <View style="@style/dev_all_line" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_all_order_foot_submit" />
</RelativeLayout>