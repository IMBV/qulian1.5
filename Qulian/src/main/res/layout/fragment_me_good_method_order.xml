<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/hs_my_good_collect_cate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_main_bg"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/hs_my_good_collect_cate_content"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"></LinearLayout>
    </HorizontalScrollView>

    <include layout="@layout/view_pulltorefresh_listview" />
    <include layout="@layout/view_page_empty" />
</LinearLayout>
